<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teacher Profiles</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Teacher Profiles</h1>
    <select id="teacherSelect">
      <option value="">Select Teacher</option>
      <% teachers.forEach(function(teacher) { %>
        <option value="<%= teacher._id %>"><%= teacher.name %></option>
      <% }) %>
    </select>

    <div id="teacherProfile" class="profile">
      <h2 id="name"></h2>
      <img id="profilePicture" src="" alt="Profile Picture">
      <p><strong>Subject:</strong> <span id="subject"></span></p>
      <p><strong>Email:</strong> <span id="email"></span></p>
      <p><strong>Phone:</strong> <span id="phone"></span></p>
      <p><strong>Bio:</strong> <span id="bio"></span></p>
      <p><strong>Experience:</strong> <span id="experience"></span></p>
      <p><strong>Classes Handled:</strong> <span id="classesHandled"></span></p>
    </div>
  </div>

  <script src="/script.js"></script>
</body>
</html>
